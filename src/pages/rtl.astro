---
import Layout from '../layouts/Layout.astro';
import GridLayoutTestCardArabic from "../components/GridLayoutTestCardArabic.astro";
---
<Layout title="Right to Left (Top to Bottom)">
	<main lang="ab" dir="rtl">
		<div class="container pb-5 pt-3">
			<h1 class="display-2 fw-bold ">Right to Left (Top to Bottom)</h1>
			<small class="pb-3"><i>Note: I do not speak Arabic, so please excuse the awful Google Translate translations</i></small>
			<hr class="pb-3"></hr>
			<section>
				<h2 class="display-4 fw-bold">Text</h2>
				<p>
					العربية، العبرية، الفارسية، الأردية، اليديشية، الباشتو، الديفيهي، الصورانية الكردية
				</p>
			</section>
			<section class="mt-4">
				<h2 class="display-5 fw-bold">Grid Layout</h2>
				<div class="row gy-1 gy-md-0">
					<div class="col-md">
						<GridLayoutTestCardArabic itemNumber=1>
					</div>
					<div class="col-md">
						<GridLayoutTestCardArabic itemNumber=2>
					</div>
					<div class="col-md">
						<GridLayoutTestCardArabic itemNumber=3>
					</div>
				</div>
				<div class="row mt-0 mt-md-2 gy-1 gy-md-0">
					<div class="col-md">
						<GridLayoutTestCardArabic itemNumber=4>
					</div>
					<div class="col-md">
						<GridLayoutTestCardArabic itemNumber=5>
					</div>
					<div class="col-md">
						<GridLayoutTestCardArabic itemNumber=6>
					</div>
				</div>
			</section>
			<section class="mt-4">
				<h2 class="display-5 fw-bold">Flexbox</h2>
				<div class="d-flex flex-wrap">
					<div class="card" style="width:18rem">
						<div class="card-body p-5">
							<h3>عنصر مرن 1</h3>
							<p>
								يبلغ عرض العنصر المرن 1 18rem.
							</p>
						</div>
					</div>
					<div class="card" style="width:40rem">
						<div class="card-body p-5">
							<h3>العنصر المرن 2</h3>
							<p>
								يبلغ عرض العنصر المرن 2 40rem.
							</p>
						</div>
					</div>
					<div class="card" style="width:30rem">
						<div class="card-body p-5">
							<h3>البند المرن 3</h3>
							<p>
								يبلغ عرض العنصر المرن 3 30rem.
							</p>
						</div>
					</div>
					<div class="card" style="width:18rem">
						<div class="card-body p-5">
							<h3>البند المرن رقم 4</h3>
							<p>
								يبلغ عرض العنصر المرن رقم 4 18rem.
							</p>
						</div>
					</div>
					<div class="card" style="width:25rem">
						<div class="card-body p-5">
							<h3>البند المرن رقم 5</h3>
							<p>
								يبلغ عرض العنصر المرن 5 25rem.
							</p>
						</div>
					</div>
				</div>
			</section>
			<section class="mt-4">
				<h2 class="display-5 fw-bold">Form</h2>
				<div class="card">
					<div class="card-body p-4">
						<form class="row g-3">
							<div class="col-md-6">
								<label for="inputEmail4" class="form-label">بريد إلكتروني</label>
								<input type="email" class="form-control" id="inputEmail4">
							</div>
							<div class="col-md-6">
								<label for="inputPassword4" class="form-label">كلمة المرور</label>
								<input type="password" class="form-control" id="inputPassword4">
							</div>
							<div class="col-12">
								<label for="inputAddress" class="form-label">عنوان</label>
								<input type="text" class="form-control" id="inputAddress" placeholder="١٢٣٤ شارع الرئيسي">
							</div>
							<div class="col-12">
								<label for="inputAddress2" class="form-label">العنوان 2</label>
								<input type="text" class="form-control" id="inputAddress2" placeholder="شقة أو استوديو أو طابق">
							</div>
							<div class="col-md-6">
								<label for="inputCity" class="form-label">مدينة</label>
								<input type="text" class="form-control" id="inputCity">
							</div>
							<div class="col-md-4">
								<label for="inputState" class="form-label">ولاية</label>
								<select id="inputState" class="form-select">
								<option selected>يختار...</option>
								<option value="AL">ال</option>
								<option value="IL">إلينوي</option>
								<option value="FL">فلوريدا</option>
								<option value="NY">نيويورك</option>
								<option value="CA">كاليفورنيا</option>
								<option value="TX">تكساس</option>
								</select>
							</div>
							<div class="col-md-2">
								<label for="inputZip" class="form-label">الرمز البريدي</label>
								<input type="text" class="form-control" id="inputZip">
							</div>
							<div class="col-12 text-end">
								<div class="form-check d-inline-block">
									<div class="d-flex justify-content-end">
										<input class="form-check-input ms-3" type="checkbox" id="gridCheck">
										<label class="form-check-label" for="gridCheck">
											تحقق مني
										</label>
									</div>
								</div>
							</div>
							<div class="col-12">
								<button type="submit" class="btn btn-dark">تسجيل الدخول</button>
							</div>
						</form>
					</div>
				</div>
			</section>
			<section class="mt-4">
				<h2 class="display-5 fw-bold">Table</h2>
				<table class="table">
					<thead>
						<tr>
						<th scope="col">#</th>
						<th scope="col">الاسم الأول</th>
						<th scope="col">اسم العائلة</th>
						<th scope="col">اسم المستخدم</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<th scope="row">1</th>
							<td>أحمد</td>
							<td>العلي</td>
							<td dir="ltr" style="text-align:right">@ahmad_alali</td>
						</tr>
						<tr>
							<th scope="row">2</th>
							<td>ليلى</td>
							<td>المصري</td>
							<td dir="ltr" style="text-align:right">@leila_masry</td>
						</tr>
						<tr>
							<th scope="row">3</th>
							<td colspan="2">خالد</td>
							<td dir="ltr" style="text-align:right">@khaled123</td>
						</tr>
					</tbody>
				</table>
			</section>
        </div>  
	</main>
</Layout>