---
import Layout from '../layouts/Layout.astro';
import GridLayoutTestCardChinese from "../components/GridLayoutTestCardChinese.astro";
---
<style is:inline>
html {
	writing-mode: vertical-rl;
}
/* reset styles/fixes for vertical-rl writing mode */
h1,h2,h3,h4,h5,h6 {
	margin:0
}
h2 {margin-left:0.5rem}
#footerContainer {
	padding-bottom:0;
	padding-left:3rem
}
.navbar-brand {
	margin-right:0!important;
	margin-bottom:0.5rem!important;
}
.navbar-nav {
	padding:0!important;
	margin-left:0!important;
}
#endNavLink {
	padding-top:0.5rem!important
}
.customRow {
	display:grid;grid-auto-flow: column;column-gap: 0.5em
}
#inputState {
    padding: 0.5rem; /* Adjust padding as needed */
    background-position: right 0.5rem center; /* Adjust background position if needed */
	width:35.6px;
}
</style>
<Layout title="Top to Bottom (Right to Left)">
	<main lang="zh">
